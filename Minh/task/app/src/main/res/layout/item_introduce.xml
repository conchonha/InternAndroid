<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <ImageView
        android:id="@+id/iv_introduce"
        android:layout_width="@dimen/_0dp"
        android:layout_height="@dimen/_0dp"
        android:src="@drawable/ic_ringtones"
        app:layout_constraintBottom_toTopOf="@id/tv_title_introduce"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="@dimen/_20dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_title_introduce"
        android:layout_width="@dimen/_0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_21dp"
        android:layout_marginTop="@dimen/_15sp"
        android:gravity="center"
        android:text="@string/ringtones"
        android:textColor="@color/white"
        android:textSize="@dimen/_37sp"
        android:layout_marginBottom="@dimen/_20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_message_introduce" />

    <TextView
        android:id="@+id/tv_message_introduce"
        android:layout_width="@dimen/_0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_13sp"
        android:gravity="center"
        android:text="@string/introduce"
        android:textColor="@color/gray"
        android:textSize="@dimen/_23sp"
        android:layout_marginBottom="7dp"
        app:layout_constraintEnd_toEndOf="@id/tv_title_introduce"
        app:layout_constraintStart_toStartOf="@id/tv_title_introduce"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>